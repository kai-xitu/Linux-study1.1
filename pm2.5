}


void L1602_char(uchar hang,uchar lie,char sign)
{
	uchar a;
	if(hang == 1) a = 0x80;		
	if(hang == 2) a = 0xc0;		
	a = a + lie - 1;			
	enable(a);					
	write(sign);				
}


void L1602_string(uchar hang,uchar lie,uchar *p)
{
	uchar a;
	if(hang == 1) a = 0x80;	   
	if(hang == 2) a = 0xc0;	   
	a = a + lie - 1;		   
	enable(a);				   
	while(1)				   
	{
		if(*p == '\0') break; 
		write(*p);			   
		p++;				   
	}
}

