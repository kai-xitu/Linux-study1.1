void delay()					 //ÑÓÊ±º¯Êý
{
	int i,j;
	for(i=0; i<=10; i++)
	for(j=0; j<=2; j++);
}

void delay_ms(uint ms)			  //ÑÓÊ±º¯Êý
{
	uint i,j;
	for(i=0;i<ms;i++)
	for(j=0;j<110;j++);
} 	  
	


void enable(uchar del)		  
{
	P0 = del;			  
	RS = 0;				
	E = 1;				
	delay();			
	E = 0;				 
	delay();			
}



void write(uchar del)
{
	P0 = del;				
	RS = 1;					
	E = 1;					
	delay();				 
	E = 0;					
	delay();				
}


