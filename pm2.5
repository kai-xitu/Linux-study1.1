void Key()
{
	if(SET_KEY==0)	
	{
		delay_ms(20);		
		if(SET_KEY==0)		
		{
			BUZZ=0;	
			set=!set;	
			TR0=!set;	
			if(set==1)							 
			{
				enable(0x80+0x40+7);			  
				if(WARNING%10000/1000!=0)		 
				write(WARNING%10000/1000+0x30);	 
				else							 
				write(' ');						  
				if(WARNING%10000/100!=0)		  
				write(WARNING%1000/100+0x30);
				else
				write(' ');
				if(WARNING%10000/10!=0)
				write(WARNING%100/10+0x30);
				else
				write(' ');
				write(WARNING%10+0x30);
				enable(0x0f);
				enable(0x80+0x40+10);
			}
			else								
			{
				enable(0x0c);//
			}
			BUZZ=1;	//·äÃùÆ÷¹Ø
			while(SET_KEY==0);
		}
	}
	if(ADD_KEY==0&&set!=0)	  Ó
	{
		delay_ms(20);	   
		if(ADD_KEY==0&&set!=0)	 
		{
			BUZZ=0;		
			WARNING+=10;	
			if(WARNING>=1000)  
			WARNING=1000;		 
			enable(0x80+0x40+7);			 
			if(WARNING%10000/1000!=0)		 
			write(WARNING%10000/1000+0x30);	 
			else							 
			write(' ');						 
			if(WARNING%10000/100!=0)
			write(WARNING%1000/100+0x30);
			else
			write(' ');
			if(WARNING%10000/10!=0)
			write(WARNING%100/10+0x30);
			else
			write(' ');
			write(WARNING%10+0x30);
			enable(0x80+0x40+10);
			BUZZ=1;	 
		}
		while(ADD_KEY==0);	  
	}
	if(SUB_KEY==0&&set!=0)	  
	{
		delay_ms(20);
		if(SUB_KEY==0&&set!=0)
		{
			BUZZ=0;		
			WARNING-=10;	
			if(WARNING<10)  
			WARNING=0;		
			enable(0x80+0x40+7);
			if(WARNING%10000/1000!=0)
			write(WARNING%10000/1000+0x30);
			else
			write(' ');
			if(WARNING%10000/100!=0)
			write(WARNING%1000/100+0x30);
			else
			write(' ');
			if(WARNING%10000/10!=0)
			write(WARNING%100/10+0x30);
			else
			write(' ');
			write(WARNING%10+0x30);
			enable(0x80+0x40+10);
			BUZZ=1;	 
//			write_eeprom();			  
		}
		while(SUB_KEY==0);	  
	}
}

void ALARM()				
{
	if(DA>=WARNING)				  
	{
		flag_BJ=1;				   
		LED_RED=0;				   
		LED_YELLOW=1;
		LED_GREEN=1;			   
	}
	else						  
	{
		if(DA<WARNING&&DA>=WARNING/2) 
		{
			LED_RED=1;
			LED_YELLOW=0;		   
			LED_GREEN=1;
		}
		else					   
		{
			LED_RED=1;
			LED_YELLOW=1;
			LED_GREEN=0;			
		}
		flag_BJ=0;				   
		BUZZ=1;					  
	}
}


